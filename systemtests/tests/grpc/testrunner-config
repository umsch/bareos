#
#  Restore a job using grpc
#

set -e
set -o pipefail
set -u

TestName="$(basename "$(pwd)")"
export TestName

JobName=backup-bareos-fd

#shellcheck source=../environment.in
. ./environment

#shellcheck source=../scripts/functions
. "${rscripts}"/functions
#shellcheck source=functions
. functions

start_test

grpc bareos.config.Config/ListCatalogs "{}" | tee "$log_home/catalog.list"
grpc bareos.config.Config/ListJobs "{}" | tee "$log_home/job.list"

jobtypes=$(jq -c '.jobs | map(.type) | unique | .[]' "$log_home/job.list")

echo "$jobtypes"

for type in $jobtypes;
do
    grpc bareos.config.Config/ListJobs "{ \"filters\" : [ { \"type\" : { \"select\" : $type } } ]}" | tee "$log_home/job-$type.list"


    diff <(jq -c ".jobs[] | select(.type == $type) | .name" "$log_home/job.list") <(jq -c ".jobs[] | select(.type == $type) | .name" "$log_home/job-$type.list")
done

grpc bareos.config.Config/ListClients "{}" | tee "$log_home/client.list"

# protobufs json encoding for bytes is base64, so we need to base64 encode
# the names here

grpc bareos.config.Config/GetDefinition "{ \"client\" : { \"name\" : \"$(echo -n "bareos-fd" | base64)\" } }" | tee "$log_home/client.def"

grpc bareos.config.Config/GetDefinition "{ \"job\" : { \"name\" : \"$(echo -n "backup-bareos-fd" | base64)\" } }" | tee "$log_home/job.def"

grpc bareos.config.Config/GetDefinition "{ \"catalog\" : { \"name\" : \"$(echo -n "MyCatalog" | base64)\" } }" | tee "$log_home/catalog.def"

end_test
